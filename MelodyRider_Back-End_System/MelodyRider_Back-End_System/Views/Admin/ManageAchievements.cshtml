@model IEnumerable<UserAchievement>

<!DOCTYPE html>
<html lang="en-us">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Admin Manage Achievements</title>
        <link rel="shortcut icon" href="~/unity/TemplateData/favicon.ico">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    </head>

    <body>
        <div class="container mt-4">
            <h1>Manage Achievements</h1>

            <table class="table table-striped mt-4">
                <thead>
                    <tr>
                        <th>Achievement Name</th>
                        <th>Description</th>
                        <th>Date Earned</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var achievement in Model)
                    {
                        <tr>
                            <td>@achievement.Achievement.Name</td>
                            <td>@achievement.Achievement.Description</td>
                            <td>@achievement.DateEarned.ToString("d")</td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Achievement", new { id = achievement.AchievementId })">Edit</a>
                                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", "Achievement", new { id = achievement.AchievementId })">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <a class="btn btn-success" href="@Url.Action("Create", "Achievement")">Create New Achievement</a>
        </div>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js"></script>
    </body>

</html>